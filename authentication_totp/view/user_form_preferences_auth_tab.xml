<data>
    <xpath expr="/form/notebook/page[@id='user']" position="after">
        <page string="Authentication" id="authentication">
            <separator string="Password" id="password_sep" colspan="4"/>
            <label name="password"/>
            <field name="password" widget="password"/>
        </page>
    </xpath>
    <xpath expr="/form/notebook/page[@id='user']/label[@name='password']" position="replace"/>
    <xpath expr="/form/notebook/page[@id='user']/field[@name='password']" position="replace"/>
</data>
